<view class="margin-top-lg bg-white padding text-xl">
  <block wx:if="user.role">
    <view>
      <text>当前会员：{{user.role.name}}</text>
    </view>
    <view>
      <text>到期时间：{{user.role_expired_at}}</text>
    </view>
  </block>
  <block wx:else>
    <view>
      <text>暂无会员</text>
    </view>
  </block>
</view>